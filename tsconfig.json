{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "rootDir": "./",
    "outDir": "./tmp",
    "types": [
      "jasmine",
      "jasminewd2",
      "node"
    ],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "dom",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "tmp",
    "./spec/helpers/reporter.js",
    "./src/js/"
  ]
}